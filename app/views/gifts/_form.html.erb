
<div>
<%= form_for @gift, class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <%= f.label "Title:", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
        <% if @errors.full_messages_for(:title) %>
          <p><%= @errors.full_messages_for(:title)[0] %></p>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Value:", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :value, prepend: "$", append: ".00", class: "form-control" %>
        <% if @errors.full_messages_for(:value) %>
          <p><%= @errors.full_messages_for(:value)[0] %></p>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Description:", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
        <% if @errors.full_messages_for(:description) %>
          <p><%= @errors.full_messages_for(:description)[0] %></p>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Brand:", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :brand, class: "form-control" %>
        <% if @errors.full_messages_for(:brand) %>
          <p><%= @errors.full_messages_for(:brand)[0] %></p>
        <% end %>
      </div>
    </div>
    <p class="hide-me"> space </p>

    <div class="form-group">
      <%= f.label "Upload an Image:", class:"col-sm-2"%>

            <%= f.file_field :image, class:"col-sm-8" %>

    <% if @errors.full_messages_for(:image) %>
        <p><%= @errors.full_messages_for(:image)[0] %></p>
      <% end %>
    </div>
      <p class="hide-me"> space </p>
  </div>




  <div style= "padding: 0px" class="form-group col-sm-12">
     <%= f.label "Category:", class: "control-label col-sm-2" %>
     <div class="col-sm-5">
        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :title) do |b| %>
          <div class="col-xs-4">
            <%= b.label do %>
              <%= b.check_box + " " + b.text %>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <br><br>
    </div>
  </div>
<% end %>
</div>
