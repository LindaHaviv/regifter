

<div class="container">
    <div class="site-overlay"></div>
    <div class="wrapper">

      

        <ul class="breadcrumb">
          <li><%= link_to "", root_path, class:"icon ion-ios-home-outline" %></li>
          <li><%= link_to "Contact Us", contact_path %></li>
        </ul>

        <div class="row">
          <div id="content" class="col-sm-12">
            <h1>Contact Us</h1>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Customer Service</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-sm-3">
                    <img src="assets/img/world-map-250x200.png" alt="" title="" class="img-thumbnail">
                  </div>
                  <div class="col-sm-3">
                    <strong>SWAPR</strong>
                    <br />
                    <address>
                      11 Broadway,
                      <br />
                      New York
                      <br />
                      NY
                    </address>
                  </div>
                  <div class="col-sm-3">
                    <strong>Phone/Email</strong>
                    <br />
                    212 - 201 - 3000
                    <br>
                    help@swapr.com
                  </div>
                  <div class="col-sm-3">
                    <strong>Customer Service</strong>
                    <br />
                    9:00 AM - 7:00 PM, every day
                  </div>
                </div>
              </div>
            </div>

            <br />

            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Contact Form</h3>
              </div>
              <div class="panel-body">
                <form class="form-horizontal">
                  <fieldset>
                    <div class="form-group required">
                      <label class="col-sm-2 control-label" for="input-name">Your Name</label>
                      <div class="col-sm-10">
                        <input type="text" name="name" value="" id="input-name" class="form-control">
                      </div>
                    </div>
                    <div class="form-group required">
                      <label class="col-sm-2 control-label" for="input-email">Email Address</label>
                      <div class="col-sm-10">
                        <input type="text" name="email" value="" id="input-email" class="form-control">
                      </div>
                    </div>
                    <div class="form-group required">
                      <label class="col-sm-2 control-label" for="input-enquiry">Enquiry</label>
                      <div class="col-sm-10">
                        <textarea name="enquiry" rows="10" id="input-enquiry" class="form-control"></textarea>
                      </div>
                    </div>
                  </fieldset>
                  <div class="buttons">
                    <div class="pull-right">
                      <input class="btn btn-primary" type="submit" value="Submit">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>


