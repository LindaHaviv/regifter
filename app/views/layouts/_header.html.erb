<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if logged_in? %>
  You are logged in, <%= current_user.name %>
   <%= link_to "Sign out", signout_path, method: :delete %>
<% else %>
  <%= link_to "Sign In", signin_path %>
  <%= link_to "Sign Up", signup_path %>
<%end%>


<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:query, "Search for regifts:") %>
  <%= text_field_tag :query, params[:query], placeholder: "I want to find..."%>
  <%= submit_tag("Search") %>
<% end %>
