
<div class="container">
<% if @over_ten %>
<%= link_to 'Show Previous', '?m=all' %>
<% end %>

<%recipient_id =Conversation.find(@messages.first[:conversation_id])[:recipient_id]%>

<h3 class="pretty_username">You are talking to
  <%=(User.find(recipient_id).name).capitalize%>
  right now:</h3>
<div class="ui segment messages">
  <% @messages.each do |message| %>
  <% if message.body %>
  <%= render message %>
  <% end %>
  <% end %>
</div>

<%= form_for [@conversation, @message], html: {class: "ui reply form"}, remote: true do |f| %>
<div class="field">
  <%= f.text_area :body, class: "form-control" %>
</div>
<%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
<div>
  <%= f.submit "Send", class: "ui blue labeled submit icon button" %>
</div>
<% end %><br>

<%= link_to 'Go back home page!', root_path %>
</div>