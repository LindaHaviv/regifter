
<div class="container">
  <% if @over_ten %>
  <%= link_to 'Show Previous', '?m=all' %>
  <% end %>
</div>

<div class="ui segment messages">
  <% @messages.each do |message| %>
    <% if message.body %>
      <%= render message %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for [@conversation, @message], html: {class: "ui reply form"}, remote: true do |f| %>
    <div class="field">
      <%= f.text_area :body, class: "form-control" %>
      <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
    </div>

    <div>
      <%= f.submit "Send", class: "ui blue labeled submit icon button" %>
    </div>
  <% end %>
  <br>
  <%= link_to 'Go back home page!', root_path %>
</div>
