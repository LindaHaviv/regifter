



<div class="container">

<ul class="breadcrumb">
  <li><%= link_to "", root_path, class:"icon ion-ios-home-outline" %></li>
  <li><%= link_to "Sign In", signin_path %></li>
</ul>
    <div class="col-xs-12">
      <h1>Sign In</h1>
    </div>
  <%= form_for(:session, url: signin_path, class: "form-horizontal") do |f| %>
      <div class = "col-sm-12">
         <div class="form-group required">
           <%= f.label "Username", class: "col-sm-2 control-label" %>
            <%= f.text_field :username, class: "form-control", icon: "user" %><br>
          </div>

          <div class="form-group required">
            <%= f.label "Email:", class: "col-sm-2 control-label" %>
            <%= f.text_field :email, placeholder:'name@example.com', class: "form-control"  %><br>
          </div>

          <div class="form-group required">
            <%= f.label "Password", class: "col-sm-2 control-label" %>
            <%= f.password_field :password, class: "form-control" %><br>
          </div>

         <div>
          <%= f.check_box :remember_me %>
          <%= f.label "Remember Me" %>
         </div><br>

          <div class="actions">
            <%= f.submit "Log In", class: "btn btn-primary"%>
          </div>
          <% end %><br>
      </div>
</div>

<div class="container">
  <div class="col-xs-12">
    <%= bootstrap_form_for(:session, url: signin_path) do |f| %>
    <div class="field">
      <%= f.text_field :username, icon: "user" %><br>
    </div>

    <div class="field">
      <%= f.text_field :email, placeholder:'name@example.com'  %><br>
    </div>

    <div class="field">
      <%= f.password_field :password %><br>
    </div>
    <%= f.check_box :remember_me %>
    <div class="actions">
      <%= f.submit "Log In"%>
    </div>
    <% end %><br>
    <%=link_to 'Back to home', root_path%>
  </div>
</div>
<br />
