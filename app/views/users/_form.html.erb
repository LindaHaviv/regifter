<%= form_for @user, class: 'form-horizontal' do |f| %>
  <div class = "col-sm-12">
    <div class="form-group required">
      <%= f.label "Name", class: "col-sm-2 control-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "John Smith" %>
      <% if @errors.full_messages_for(:name) != [] %>
      <% @errors.full_messages_for(:name).each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      <% end %>
    </div>
    <div class="form-group required">
      <%= f.label "Email:", class: "col-sm-2 control-label" %>
      <%= f.email_field :email, placeholder: 'name@example.com', class: "form-control" %>
      <% if @errors.full_messages_for(:email) != [] %>
      <% @errors.full_messages_for(:email).each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      <% end %>
    </div>
    <br>
    <div class="form-group required">
      <%= f.label "Username", class: "col-sm-2 control-label" %>
      <%= f.text_field :username, class: "form-control", placeholder: "jsmith123" %>
      <% if @errors.full_messages_for(:username) != [] %>
      <% @errors.full_messages_for(:username).each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      <% end %>
    </div>
    <br>
    <div class="form-group required">
      <%= f.label "Address", class: "col-sm-2 control-label" %>
      <%= f.text_area :address, class: "form-control" %>
      <% if @errors.full_messages_for(:address) != [] %>
      <% @errors.full_messages_for(:address).each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      <% end %>
    </div>
    <br>
    <div class="form-group required">
      <%= f.label "Password", class: "col-sm-2 control-label" %>
      <%= f.password_field :password, help: "Must be at least 10 characters long", class: "form-control" %>
      <% if @errors.full_messages_for(:password) != [] %>
      <% @errors.full_messages_for(:password).each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      <% end %>
    </div>
    <br>
    <div class="form-group required">
      <%= f.label "Confirm Password", class: "col-sm-2 control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control"  %>
      <% if @errors.full_messages_for(:password_confirmation) != [] %>
      <% @errors.full_messages_for(:password_confirmation).each do |msg| %>
      <p><%= msg %></p>
      <% end %>
      <% end %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit class: "btn btn-primary"%>
    </div> <br>
  <% end %>
  </div>
